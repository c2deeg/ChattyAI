<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lessroundeddrawable"
    android:layout_marginHorizontal="20sp"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/linmain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvmaintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/intermedium"
        android:gravity="center"
        android:text="Basic Plan"
        android:textColor="@color/white"
        android:textSize="24sp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvtokenlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token Limit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvtokenamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100K"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="18sp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvtokentext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With each token being roughly equivalent to 4 letters,our system allow you to generate an estimated 75,000 words by utilizing tokens"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:fontFamily="@font/interregular"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvtimagegenrations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Generations"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvimagegennamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="18sp"
            android:singleLine="true"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvimgext"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With each token being roughly equivalent to 4 letters,our system allow you to generate an estimated 75,000 words by utilizing tokens"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:fontFamily="@font/interregular"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvttranscriptionlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transcription limit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvilimitamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10hrs"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="18sp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvtranscriptionext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With each token being roughly equivalent to 4 letters,our system allow you to generate an estimated 75,000 words by utilizing tokens"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:fontFamily="@font/interregular"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/linbuyplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20sp"
        android:background="@drawable/moreroundcorner"
        android:backgroundTint="@android:color/black"
        >
        <TextView
            android:id="@+id/tvplanprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/intermedium"
            android:gravity="center"
            android:text="$20"
            android:textColor="@color/lightgray"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvduration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interregular"
            android:gravity="center"
            android:text="Two months subscription"
            android:textColor="@color/lightgray"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/moreroundcorner"
        android:backgroundTint="@android:color/black"
        android:fontFamily="@font/intermedium"
        android:gravity="center"
        android:padding="15dp"
        android:text="Restore purchase"
        android:textColor="@color/lightgray"
        android:textSize="16sp" />


</LinearLayout>